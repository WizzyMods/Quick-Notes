<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/helpMainBg"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="5dp"
		android:layout_marginBottom="5dp"
		android:padding="10dp"
		android:orientation="vertical"
		android:animateLayoutChanges="true"
		android:background="@drawable/rounded_bg25dp"
		android:clipChildren="false"
		android:clipToPadding="false">
		<LinearLayout
			android:id="@+id/helpTitleBg"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="4dp"
			android:gravity="center_vertical"
			android:orientation="horizontal">
			<TextView
				android:id="@+id/titleText"
				android:focusable="false"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:text="Uygulama da nasıl notlarımı kaydederim\?"
				android:textSize="18sp"
				android:textStyle="bold"
				android:textColor="@color/colorAccent"
				android:layout_weight="1" />
			<ImageView
				android:id="@+id/helpAnswerImage"
				android:focusable="false"
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:padding="5dp"
				android:src="@drawable/arrow_drop_down_72dp_black"
				android:scaleType="fitCenter" />
		</LinearLayout>
		<ScrollView
			android:id="@+id/helpAnswerScroll"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="8dp"
			android:paddingRight="8dp"
			android:overScrollMode="never"
			android:visibility="gone"
			android:clipChildren="false"
			android:clipToPadding="false">
			<LinearLayout
				android:id="@+id/linear1"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="4dp"
				android:orientation="vertical"
				android:clipChildren="false"
				android:clipToPadding="false">
				<TextView
					android:id="@+id/helpAnswerText"
					android:focusable="false"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="Uygulamamız sizler için uygundur."
					android:textSize="16sp"
					android:textColor="@color/colorOnPrimary" />
				<com.google.android.material.button.MaterialButton
					android:id="@+id/helpButton"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="4dp"
					android:layout_marginRight="4dp"
					android:padding="4dp"
					android:gravity="center_horizontal|center_vertical"
					android:text="Material Button"
					android:textSize="18sp"
					android:textColor="@color/colorOnPrimary"
					app:cornerRadius="15dp"
					android:visibility="gone"
					android:textAllCaps="false" />
			</LinearLayout>
		</ScrollView>
	</LinearLayout>
</LinearLayout>

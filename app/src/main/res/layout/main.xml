<androidx.drawerlayout.widget.DrawerLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/_drawer"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:openDrawer="start">
	<androidx.coordinatorlayout.widget.CoordinatorLayout
		android:id="@+id/_coordinator"
		android:layout_width="match_parent"
		android:layout_height="match_parent">
		<com.google.android.material.appbar.AppBarLayout
			android:id="@+id/_app_bar"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:theme="@style/AppTheme.AppBarOverlay">
			<com.google.android.material.appbar.MaterialToolbar
				android:id="@+id/_toolbar"
				android:layout_width="match_parent"
				android:layout_height="?attr/actionBarSize"
				android:background="?attr/colorPrimary"
				app:popupTheme="@style/AppTheme.PopupOverlay" />
		</com.google.android.material.appbar.AppBarLayout>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical"
			app:layout_behavior="@string/appbar_scrolling_view_behavior">
			<LinearLayout
				android:id="@+id/mainBg"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:layout_weight="1"
				android:animateLayoutChanges="true">
				<RelativeLayout
					android:id="@+id/mainRelativeBg"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:animateLayoutChanges="true">
					<androidx.core.widget.NestedScrollView
						android:id="@+id/mainVscroll"
						android:layout_width="match_parent"
						android:layout_height="wrap_content">
						<LinearLayout
							android:id="@+id/mainBigBg"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:orientation="vertical">
							<LinearLayout
								android:id="@+id/welcomeBg"
								android:layout_width="match_parent"
								android:layout_height="150dp"
								android:layout_marginTop="80dp"
								android:padding="8dp"
								android:gravity="center_horizontal|center_vertical"
								android:orientation="vertical">
								<TextView
									android:id="@+id/welcomeText"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:padding="8dp"
									android:gravity="center_horizontal|center_vertical"
									android:text="@string/welcome"
									android:textSize="40sp"
									android:textStyle="bold"
									android:textColor="@color/colorOnPrimary" />
								<TextView
									android:id="@+id/dailyText"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:padding="8dp"
									android:text="Daily Texts"
									android:textSize="18sp"
									android:textStyle="italic"
									android:textColor="@color/colorPrimaryHint"
									android:visibility="gone" />
							</LinearLayout>
							<LinearLayout
								android:id="@+id/categoryMainBg"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:padding="5dp"
								android:gravity="center_vertical"
								android:orientation="horizontal"
								android:clipChildren="false"
								android:clipToPadding="false">
								<HorizontalScrollView
									android:id="@+id/categoryScrollBg"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:layout_weight="1"
									android:scrollbars="none"
									android:clipChildren="false"
									android:clipToPadding="false"
									android:overScrollMode="never">
									<LinearLayout
										android:id="@+id/categoryBg"
										android:layout_width="wrap_content"
										android:layout_height="wrap_content"
										android:gravity="center_vertical"
										android:orientation="horizontal"
										android:clipChildren="false"
										android:clipToPadding="false">
										<com.google.android.material.button.MaterialButton
											android:id="@+id/categoryAllButton"
											android:layout_width="wrap_content"
											android:layout_height="wrap_content"
											android:layout_margin="2dp"
											android:padding="8dp"
											app:backgroundTint="#F44336"
											android:gravity="center_horizontal|center_vertical"
											android:text="@string/all"
											android:textSize="18sp"
											android:textColor="#000000"
											app:cornerRadius="15dp"
											android:textAllCaps="false" />
										<com.google.android.material.button.MaterialButton
											android:id="@+id/category1Button"
											android:layout_width="wrap_content"
											android:layout_height="wrap_content"
											android:layout_margin="2dp"
											android:padding="8dp"
											app:backgroundTint="#2196F3"
											android:gravity="center_horizontal|center_vertical"
											android:text="Personal"
											android:textSize="14sp"
											android:textColor="#000000"
											android:alpha="0.9"
											app:cornerRadius="15dp"
											android:textAllCaps="false" />
										<com.google.android.material.button.MaterialButton
											android:id="@+id/category2Button"
											android:layout_width="wrap_content"
											android:layout_height="wrap_content"
											android:layout_margin="2dp"
											android:padding="8dp"
											app:backgroundTint="#8BC34A"
											android:gravity="center_horizontal|center_vertical"
											android:text="Work"
											android:textSize="14sp"
											android:textColor="#000000"
											android:alpha="0.9"
											app:cornerRadius="15dp"
											android:textAllCaps="false" />
										<com.google.android.material.button.MaterialButton
											android:id="@+id/category3Button"
											android:layout_width="wrap_content"
											android:layout_height="wrap_content"
											android:layout_margin="2dp"
											android:padding="8dp"
											app:backgroundTint="#FFEB3B"
											android:gravity="center_horizontal|center_vertical"
											android:text="School"
											android:textSize="14sp"
											android:textColor="#000000"
											android:alpha="0.9"
											app:cornerRadius="15dp"
											android:textAllCaps="false" />
										<com.google.android.material.button.MaterialButton
											android:id="@+id/category4Button"
											android:layout_width="wrap_content"
											android:layout_height="wrap_content"
											android:layout_margin="2dp"
											android:padding="8dp"
											app:backgroundTint="#FF9800"
											android:gravity="center_horizontal|center_vertical"
											android:text="Untitled 1"
											android:textSize="14sp"
											android:textColor="#000000"
											android:alpha="0.9"
											app:cornerRadius="15dp"
											android:textAllCaps="false" />
										<com.google.android.material.button.MaterialButton
											android:id="@+id/category5Button"
											android:layout_width="wrap_content"
											android:layout_height="wrap_content"
											android:layout_margin="2dp"
											android:padding="8dp"
											app:backgroundTint="#673AB7"
											android:gravity="center_horizontal|center_vertical"
											android:text="Untitled 2"
											android:textSize="14sp"
											android:textColor="#000000"
											android:alpha="0.9"
											app:cornerRadius="15dp"
											android:textAllCaps="false" />
										<com.google.android.material.button.MaterialButton
											android:id="@+id/category6Button"
											android:layout_width="wrap_content"
											android:layout_height="wrap_content"
											android:layout_margin="2dp"
											android:padding="8dp"
											app:backgroundTint="#00BCD4"
											android:gravity="center_horizontal|center_vertical"
											android:text="Untitled 3"
											android:textSize="14sp"
											android:textColor="#000000"
											android:alpha="0.9"
											app:cornerRadius="15dp"
											android:textAllCaps="false" />
										<com.google.android.material.button.MaterialButton
											android:id="@+id/category7Button"
											android:layout_width="wrap_content"
											android:layout_height="wrap_content"
											android:layout_margin="2dp"
											android:padding="8dp"
											app:backgroundTint="#CDDC39"
											android:gravity="center_horizontal|center_vertical"
											android:text="Untitled 4"
											android:textSize="14sp"
											android:textColor="#000000"
											android:alpha="0.9"
											app:cornerRadius="15dp"
											android:textAllCaps="false" />
										<com.google.android.material.button.MaterialButton
											android:id="@+id/category8Button"
											android:layout_width="wrap_content"
											android:layout_height="wrap_content"
											android:layout_margin="2dp"
											android:padding="8dp"
											app:backgroundTint="#009688"
											android:gravity="center_horizontal|center_vertical"
											android:text="Untitled 5"
											android:textSize="14sp"
											android:textColor="#000000"
											android:alpha="0.9"
											app:cornerRadius="15dp"
											android:textAllCaps="false" />
									</LinearLayout>
								</HorizontalScrollView>
								<eightbitlab.com.blurview.BlurView
									android:id="@+id/editCategoryBlurBg"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:padding="5dp"
									android:orientation="vertical"
									android:background="@drawable/rounded_bg"
									android:elevation="5dp">
									<ImageView
										android:id="@+id/editCategoryNamesImage"
										android:layout_width="wrap_content"
										android:layout_height="wrap_content"
										android:src="@drawable/edit_black_72"
										android:scaleType="center"
										android:tint="?attr/colorOnPrimary" />
								</eightbitlab.com.blurview.BlurView>
							</LinearLayout>
							<TextView
								android:id="@+id/categoryText"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_marginLeft="10dp"
								android:padding="2dp"
								android:background="@android:color/transparent"
								android:text="All Notesi"
								android:textSize="14sp"
								android:textStyle="italic"
								android:textColor="@color/colorPrimaryHint" />
							<LinearLayout
								android:id="@+id/divider"
								android:layout_width="match_parent"
								android:layout_height="2dp"
								android:layout_marginTop="2dp"
								android:layout_marginBottom="2dp"
								android:padding="8dp"
								android:background="@color/colorPrimaryHint"
								android:orientation="horizontal" />
							<androidx.recyclerview.widget.RecyclerView
								android:id="@+id/mainRecycler"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:paddingLeft="4dp"
								android:paddingTop="10dp"
								android:paddingRight="4dp"
								android:paddingBottom="20dp"
								android:clipToPadding="false"
								tools:listitem="@layout/noterecylerview" />
							<com.airbnb.lottie.LottieAnimationView
								android:id="@+id/emptyLottie"
								android:layout_width="wrap_content"
								android:layout_height="300dp"
								android:padding="8dp"
								android:layout_gravity="center_horizontal"
								android:scaleType="fitCenter"
								android:layout_centerInParent="true"
								app:lottie_fileName="empty.json"
								app:lottie_loop="true"
								app:lottie_autoPlay="true"
								android:visibility="gone" />
						</LinearLayout>
					</androidx.core.widget.NestedScrollView>
					<eightbitlab.com.blurview.BlurView
						android:id="@+id/toolbarBlur"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:padding="4dp"
						android:orientation="vertical">
						<LinearLayout
							android:id="@+id/toolbarBigBg"
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:padding="4dp"
							android:orientation="vertical"
							android:animateLayoutChanges="true">
							<LinearLayout
								android:id="@+id/toolbarBg"
								android:layout_width="match_parent"
								android:layout_height="48dp"
								android:background="@android:color/transparent"
								android:gravity="center_vertical"
								android:orientation="horizontal"
								android:animateLayoutChanges="true"
								android:clipChildren="false"
								android:clipToPadding="false">
								<ImageView
									android:id="@+id/toolbarDrawerImage"
									android:layout_width="40dp"
									android:layout_height="40dp"
									android:padding="6dp"
									android:src="@drawable/side_navigation_72dp_black"
									android:scaleType="fitCenter"
									android:tint="?attr/colorOnPrimary" />
								<LinearLayout
									android:id="@+id/toolbarTextBg"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:paddingLeft="5dp"
									android:paddingRight="5dp"
									android:gravity="center_vertical"
									android:orientation="vertical"
									android:layout_weight="1"
									android:clipChildren="false"
									android:clipToPadding="false">
									<TextView
										android:id="@+id/toolbarTitle"
										android:layout_width="match_parent"
										android:layout_height="wrap_content"
										android:padding="1dp"
										android:text="Quick Notes"
										android:textSize="20sp"
										android:textStyle="bold"
										android:textColor="@color/colorOnPrimary"
										android:autoSizeTextType="uniform"
										android:autoSizeMinTextSize="18sp"
										android:autoSizeMaxTextSize="22sp"
										android:autoSizeStepGranularity="1sp" />
									<TextView
										android:id="@+id/toolbarSubtitle"
										android:layout_width="match_parent"
										android:layout_height="wrap_content"
										android:padding="1dp"
										android:text="@string/home"
										android:textSize="16sp"
										android:textColor="@color/colorOnPrimary"
										android:autoSizeTextType="uniform"
										android:autoSizeMinTextSize="15sp"
										android:autoSizeMaxTextSize="17sp"
										android:autoSizeStepGranularity="1sp" />
								</LinearLayout>
								<ImageView
									android:id="@+id/layoutImage"
									android:layout_width="40dp"
									android:layout_height="40dp"
									android:padding="5dp"
									android:src="@drawable/grid_view_72dp_black"
									android:scaleType="fitCenter"
									android:tint="?attr/colorOnPrimary" />
								<ImageView
									android:id="@+id/showFavoritesImage"
									android:layout_width="40dp"
									android:layout_height="40dp"
									android:padding="6dp"
									android:background="@android:color/transparent"
									android:src="@drawable/star_72dp_black"
									android:scaleType="fitCenter"
									android:tint="?attr/colorOnPrimary" />
								<ImageView
									android:id="@+id/showDateAndTimeImage"
									android:layout_width="40dp"
									android:layout_height="40dp"
									android:padding="6dp"
									android:background="@android:color/transparent"
									android:src="@drawable/event_available_72dp_black"
									android:scaleType="fitCenter"
									android:tint="?attr/colorOnPrimary" />
								<ImageView
									android:id="@+id/toolbarSearchImage"
									android:layout_width="40dp"
									android:layout_height="40dp"
									android:padding="5dp"
									android:src="@drawable/manage_search_72dp_black"
									android:scaleType="fitCenter"
									android:tint="?attr/colorOnPrimary"
									android:transitionName="search" />
							</LinearLayout>
							<LinearLayout
								android:id="@+id/searchBg"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:layout_margin="8dp"
								android:padding="8dp"
								android:orientation="horizontal"
								android:elevation="5dp"
								android:background="@drawable/rounded_bg"
								android:visibility="gone">
								<EditText
									android:id="@+id/searchedittext"
									android:layout_width="match_parent"
									android:layout_height="match_parent"
									android:paddingLeft="10dp"
									android:paddingTop="8dp"
									android:paddingRight="10dp"
									android:paddingBottom="8dp"
									android:background="@android:color/transparent"
									android:gravity="left|center_vertical"
									android:textSize="18sp"
									android:textColor="@color/colorOnPrimary"
									android:hint="@string/search"
									android:textColorHint="@color/colorPrimaryHint"
									android:singleLine="true" />
							</LinearLayout>
							<LinearLayout
								android:id="@+id/optionsBg"
								android:layout_width="match_parent"
								android:layout_height="50dp"
								android:paddingLeft="8dp"
								android:paddingTop="4dp"
								android:paddingRight="8dp"
								android:paddingBottom="4dp"
								android:gravity="center_vertical"
								android:orientation="horizontal"
								android:animateLayoutChanges="true"
								android:visibility="gone"
								android:background="@drawable/rounded_bg">
								<ImageView
									android:id="@+id/optionsCancel"
									android:layout_width="40dp"
									android:layout_height="40dp"
									android:src="@drawable/close_72dp_black"
									android:scaleType="centerInside"
									android:tint="?attr/colorOnPrimary" />
								<TextView
									android:id="@+id/optionsText"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:padding="4dp"
									android:text="Options"
									android:textSize="18sp"
									android:textColor="@color/colorOnPrimary"
									android:layout_weight="1" />
								<ImageView
									android:id="@+id/optionsDelete"
									android:layout_width="40dp"
									android:layout_height="40dp"
									android:padding="1dp"
									android:src="@drawable/delete_72dp_black"
									android:scaleType="centerInside"
									android:tint="?attr/colorOnPrimary" />
								<ImageView
									android:id="@+id/optionsArchive"
									android:layout_width="40dp"
									android:layout_height="40dp"
									android:padding="1dp"
									android:src="@drawable/archive_72dp_black"
									android:scaleType="fitCenter"
									android:tint="?attr/colorOnPrimary" />
								<ImageView
									android:id="@+id/optionsShare"
									android:layout_width="40dp"
									android:layout_height="40dp"
									android:padding="1dp"
									android:src="@drawable/share_72dp_black"
									android:scaleType="centerInside"
									android:tint="?attr/colorOnPrimary" />
							</LinearLayout>
						</LinearLayout>
					</eightbitlab.com.blurview.BlurView>
				</RelativeLayout>
				<com.google.android.gms.ads.AdView
					android:id="@+id/banner1"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					app:adSize="BANNER"
					app:adUnitId="ca-app-pub-4066032612915131/1104704230" />
			</LinearLayout>
		</LinearLayout>
		<com.google.android.material.floatingactionbutton.FloatingActionButton
			android:id="@+id/_fab"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="16dp"
			android:layout_marginTop="16dp"
			android:layout_marginRight="16dp"
			android:layout_marginBottom="56dp"
			android:layout_gravity="center_horizontal|bottom"
			app:srcCompat="@drawable/default_image"
			android:tint="?attr/colorOnPrimary"
			android:transitionName="logo"
			android:alpha="0.8" />
	</androidx.coordinatorlayout.widget.CoordinatorLayout>
	<LinearLayout
		android:id="@+id/_nav_view"
		android:layout_width="320dp"
		android:layout_height="match_parent"
		android:layout_gravity="start"
		android:background="#00FFFFFF"
		android:alpha="1">
		<include layout="@layout/_drawer_main" android:id="@+id/drawer" />
	</LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>

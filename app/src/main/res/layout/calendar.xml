<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/toolbarBg"
		android:layout_width="match_parent"
		android:layout_height="56dp"
		android:paddingLeft="6dp"
		android:paddingRight="6dp"
		android:background="@color/colorPrimary"
		android:gravity="center_vertical"
		android:orientation="horizontal"
		android:animateLayoutChanges="true"
		android:clipChildren="false"
		android:clipToPadding="false">
		<ImageView
			android:id="@+id/toolbarBackImage"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:padding="5dp"
			android:src="@drawable/arrow_back_72dp_black"
			android:scaleType="fitCenter"
			android:tint="?attr/colorOnPrimary" />
		<LinearLayout
			android:id="@+id/toolbarTextBg"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingLeft="5dp"
			android:paddingRight="5dp"
			android:gravity="center_vertical"
			android:orientation="vertical"
			android:layout_weight="1"
			android:clipChildren="false"
			android:clipToPadding="false"
			android:animateLayoutChanges="true">
			<TextView
				android:id="@+id/toolbarTitle"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="1dp"
				android:text="@string/calendar"
				android:textSize="20sp"
				android:textStyle="bold"
				android:textColor="@color/colorOnPrimary"
				android:singleLine="true"
				android:ellipsize="end" />
			<TextView
				android:id="@+id/toolbarSubtitle"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="1dp"
				android:textSize="16sp"
				android:textColor="@color/colorOnPrimary"
				android:singleLine="true"
				android:ellipsize="end"
				android:visibility="gone" />
		</LinearLayout>
		<ImageView
			android:id="@+id/toolbarCurrentDayImage"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:padding="5dp"
			android:src="@drawable/today_72dp_black"
			android:scaleType="fitCenter"
			android:tint="?attr/colorOnPrimary" />
	</LinearLayout>
	<androidx.core.widget.NestedScrollView
		android:id="@+id/mainScroll"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_weight="1">
		<LinearLayout
			android:id="@+id/mainBg"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal"
			android:orientation="vertical">
			<CalendarView
				android:id="@+id/mainCalendar"
				android:layout_width="match_parent"
				android:layout_height="wrap_content" />
			<androidx.recyclerview.widget.RecyclerView
				android:id="@+id/noteRecycler"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				tools:listitem="@layout/noterecylerview" />
		</LinearLayout>
	</androidx.core.widget.NestedScrollView>
	<com.google.android.gms.ads.AdView
		android:id="@+id/adview1"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@android:color/transparent"
		app:adSize="BANNER"
		app:adUnitId="ca-app-pub-4066032612915131/1104704230"
		android:layout_gravity="center_horizontal|center_vertical" />
</LinearLayout>

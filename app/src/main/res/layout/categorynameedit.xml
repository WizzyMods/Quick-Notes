<androidx.coordinatorlayout.widget.CoordinatorLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/_coordinator"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">
		<LinearLayout
			android:id="@+id/toolbarBg"
			android:layout_width="match_parent"
			android:layout_height="56dp"
			android:padding="6dp"
			android:background="@color/colorPrimary"
			android:gravity="center_vertical"
			android:orientation="horizontal"
			android:animateLayoutChanges="true">
			<ImageView
				android:id="@+id/toolbarBackImage"
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:padding="5dp"
				android:src="@drawable/arrow_back_72dp_black"
				android:scaleType="fitCenter"
				android:tint="?attr/colorOnPrimary" />
			<LinearLayout
				android:id="@+id/toolbarTextBg"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingLeft="5dp"
				android:paddingRight="5dp"
				android:gravity="center_vertical"
				android:orientation="vertical"
				android:layout_weight="1">
				<TextView
					android:id="@+id/toolbarTitle"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="1dp"
					android:text="@string/customizeCategoryNames"
					android:textSize="20sp"
					android:textStyle="bold"
					android:textColor="@color/colorOnPrimary"
					android:singleLine="true"
					android:ellipsize="end" />
				<TextView
					android:id="@+id/toolbarSubtitle"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="1dp"
					android:textSize="16sp"
					android:textColor="@color/colorOnPrimary"
					android:singleLine="true"
					android:ellipsize="end"
					android:visibility="gone" />
			</LinearLayout>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/showcaseTitleBg"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="horizontal">
			<TextView
				android:id="@+id/showcaseTitleText"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:text="@string/categoryShowcase"
				android:textSize="18sp"
				android:textColor="@color/colorOnPrimary" />
		</LinearLayout>
		<HorizontalScrollView
			android:id="@+id/categoryScrollBg"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:scrollbars="none">
			<LinearLayout
				android:id="@+id/categoryBg"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="4dp"
				android:gravity="center_vertical"
				android:orientation="horizontal"
				android:clipChildren="false"
				android:clipToPadding="false">
				<com.google.android.material.button.MaterialButton
					android:id="@+id/categoryAllButton"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="2dp"
					android:padding="8dp"
					app:backgroundTint="#F44336"
					android:gravity="center_horizontal|center_vertical"
					android:text="All"
					android:textSize="14sp"
					android:textColor="#000000"
					app:cornerRadius="15dp"
					android:textAllCaps="false" />
				<com.google.android.material.button.MaterialButton
					android:id="@+id/category1Button"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="2dp"
					android:padding="8dp"
					app:backgroundTint="#2196F3"
					android:gravity="center_horizontal|center_vertical"
					android:text="Personal"
					android:textSize="14sp"
					android:textColor="#000000"
					app:cornerRadius="15dp"
					android:textAllCaps="false" />
				<com.google.android.material.button.MaterialButton
					android:id="@+id/category2Button"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="2dp"
					android:padding="8dp"
					app:backgroundTint="#8BC34A"
					android:gravity="center_horizontal|center_vertical"
					android:text="Work"
					android:textSize="14sp"
					android:textColor="#000000"
					app:cornerRadius="15dp"
					android:textAllCaps="false" />
				<com.google.android.material.button.MaterialButton
					android:id="@+id/category3Button"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="2dp"
					android:padding="8dp"
					app:backgroundTint="#FFEB3B"
					android:gravity="center_horizontal|center_vertical"
					android:text="School"
					android:textSize="14sp"
					android:textColor="#000000"
					app:cornerRadius="15dp"
					android:textAllCaps="false" />
				<com.google.android.material.button.MaterialButton
					android:id="@+id/category4Button"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="2dp"
					android:padding="8dp"
					app:backgroundTint="#FF9800"
					android:gravity="center_horizontal|center_vertical"
					android:text="Untitled 1"
					android:textSize="14sp"
					android:textColor="#000000"
					app:cornerRadius="15dp"
					android:textAllCaps="false" />
				<com.google.android.material.button.MaterialButton
					android:id="@+id/category5Button"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="2dp"
					android:padding="8dp"
					app:backgroundTint="#673AB7"
					android:gravity="center_horizontal|center_vertical"
					android:text="Untitled 2"
					android:textSize="14sp"
					android:textColor="#000000"
					app:cornerRadius="15dp"
					android:textAllCaps="false" />
				<com.google.android.material.button.MaterialButton
					android:id="@+id/category6Button"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="2dp"
					android:padding="8dp"
					app:backgroundTint="#00BCD4"
					android:gravity="center_horizontal|center_vertical"
					android:text="Untitled 3"
					android:textSize="14sp"
					android:textColor="#000000"
					app:cornerRadius="15dp"
					android:textAllCaps="false" />
				<com.google.android.material.button.MaterialButton
					android:id="@+id/category7Button"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="2dp"
					android:padding="8dp"
					app:backgroundTint="#CDDC39"
					android:gravity="center_horizontal|center_vertical"
					android:text="Untitled 4"
					android:textSize="14sp"
					android:textColor="#000000"
					app:cornerRadius="15dp"
					android:textAllCaps="false" />
				<com.google.android.material.button.MaterialButton
					android:id="@+id/category8Button"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="2dp"
					android:padding="8dp"
					app:backgroundTint="#009688"
					android:gravity="center_horizontal|center_vertical"
					android:text="Untitled 5"
					android:textSize="14sp"
					android:textColor="#000000"
					app:cornerRadius="15dp"
					android:textAllCaps="false" />
			</LinearLayout>
		</HorizontalScrollView>
		<ScrollView
			android:id="@+id/editCategoryScollBg"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="8dp">
			<LinearLayout
				android:id="@+id/editCategoryBg"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:gravity="center_horizontal"
				android:orientation="vertical"
				android:clipChildren="false"
				android:clipToPadding="false">
				<TextView
					android:id="@+id/editCategoryTitle"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="@string/editCategoryNames"
					android:textSize="18sp"
					android:textColor="@color/colorOnPrimary" />
				<LinearLayout
					android:id="@+id/category1Bg"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:gravity="center_vertical"
					android:orientation="horizontal"
					android:clipChildren="false"
					android:clipToPadding="false">
					<EditText
						android:id="@+id/category1EditText"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:textSize="14sp"
						android:textColor="@color/colorOnPrimary"
						android:hint="@string/unnamed"
						android:textColorHint="@color/colorPrimaryHint"
						android:layout_weight="1"
						android:maxLength="20" />
					<com.google.android.material.button.MaterialButton
						android:id="@+id/category1ButtonEdit"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						app:backgroundTint="#2196F3"
						android:gravity="center_horizontal|center_vertical"
						android:text="Personal"
						android:textSize="14sp"
						android:textColor="#000000"
						app:cornerRadius="15dp"
						android:textAllCaps="false" />
				</LinearLayout>
				<LinearLayout
					android:id="@+id/category2Bg"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:gravity="center_vertical"
					android:orientation="horizontal"
					android:clipChildren="false"
					android:clipToPadding="false">
					<EditText
						android:id="@+id/category2EditText"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:textSize="14sp"
						android:textColor="@color/colorOnPrimary"
						android:hint="@string/unnamed"
						android:textColorHint="@color/colorPrimaryHint"
						android:layout_weight="1"
						android:maxLength="20" />
					<com.google.android.material.button.MaterialButton
						android:id="@+id/category2ButtonEdit"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						app:backgroundTint="#8BC34A"
						android:gravity="center_horizontal|center_vertical"
						android:text="Work"
						android:textSize="14sp"
						android:textColor="#000000"
						app:cornerRadius="15dp"
						android:textAllCaps="false" />
				</LinearLayout>
				<LinearLayout
					android:id="@+id/category3Bg"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:gravity="center_vertical"
					android:orientation="horizontal"
					android:clipChildren="false"
					android:clipToPadding="false">
					<EditText
						android:id="@+id/category3EditText"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:textSize="14sp"
						android:textColor="@color/colorOnPrimary"
						android:hint="@string/unnamed"
						android:textColorHint="@color/colorPrimaryHint"
						android:layout_weight="1"
						android:maxLength="20" />
					<com.google.android.material.button.MaterialButton
						android:id="@+id/category3ButtonEdit"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						app:backgroundTint="#FFEB3B"
						android:gravity="center_horizontal|center_vertical"
						android:text="School"
						android:textSize="14sp"
						android:textColor="#000000"
						app:cornerRadius="15dp"
						android:textAllCaps="false" />
				</LinearLayout>
				<LinearLayout
					android:id="@+id/category4Bg"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:gravity="center_vertical"
					android:orientation="horizontal"
					android:clipChildren="false"
					android:clipToPadding="false">
					<EditText
						android:id="@+id/category4EditText"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:textSize="14sp"
						android:textColor="@color/colorOnPrimary"
						android:hint="@string/unnamed"
						android:textColorHint="@color/colorPrimaryHint"
						android:layout_weight="1"
						android:maxLength="20" />
					<com.google.android.material.button.MaterialButton
						android:id="@+id/category4ButtonEdit"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						app:backgroundTint="#FF9800"
						android:gravity="center_horizontal|center_vertical"
						android:text="MaterialButton"
						android:textSize="14sp"
						android:textColor="#000000"
						app:cornerRadius="15dp"
						android:textAllCaps="false" />
				</LinearLayout>
				<LinearLayout
					android:id="@+id/category5Bg"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:orientation="horizontal"
					android:clipChildren="false"
					android:clipToPadding="false">
					<EditText
						android:id="@+id/category5EditText"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:textSize="14sp"
						android:textColor="@color/colorOnPrimary"
						android:hint="@string/unnamed"
						android:textColorHint="@color/colorPrimaryHint"
						android:layout_weight="1"
						android:maxLength="20" />
					<com.google.android.material.button.MaterialButton
						android:id="@+id/category5ButtonEdit"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						app:backgroundTint="#673AB7"
						android:gravity="center_horizontal|center_vertical"
						android:text="MaterialButton"
						android:textSize="14sp"
						android:textColor="#000000"
						app:cornerRadius="15dp"
						android:textAllCaps="false" />
				</LinearLayout>
				<LinearLayout
					android:id="@+id/category6Bg"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:gravity="center_vertical"
					android:orientation="horizontal"
					android:clipChildren="false"
					android:clipToPadding="false">
					<EditText
						android:id="@+id/category6EditText"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:textSize="14sp"
						android:textColor="@color/colorOnPrimary"
						android:hint="@string/unnamed"
						android:textColorHint="@color/colorPrimaryHint"
						android:layout_weight="1"
						android:maxLength="20" />
					<com.google.android.material.button.MaterialButton
						android:id="@+id/category6ButtonEdit"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						app:backgroundTint="#00BCD4"
						android:gravity="center_horizontal|center_vertical"
						android:text="MaterialButton"
						android:textSize="14sp"
						android:textColor="#000000"
						app:cornerRadius="15dp"
						android:textAllCaps="false" />
				</LinearLayout>
				<LinearLayout
					android:id="@+id/category7Bg"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:gravity="center_vertical"
					android:orientation="horizontal"
					android:clipChildren="false"
					android:clipToPadding="false">
					<EditText
						android:id="@+id/category7EditText"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:textSize="14sp"
						android:textColor="@color/colorOnPrimary"
						android:hint="@string/unnamed"
						android:textColorHint="@color/colorPrimaryHint"
						android:layout_weight="1"
						android:maxLength="20" />
					<com.google.android.material.button.MaterialButton
						android:id="@+id/category7ButtonEdit"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						app:backgroundTint="#CDDC39"
						android:gravity="center_horizontal|center_vertical"
						android:text="MaterialButton"
						android:textSize="14sp"
						android:textColor="#000000"
						app:cornerRadius="15dp"
						android:textAllCaps="false" />
				</LinearLayout>
				<LinearLayout
					android:id="@+id/category8Bg"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:gravity="center_vertical"
					android:orientation="horizontal"
					android:clipChildren="false"
					android:clipToPadding="false">
					<EditText
						android:id="@+id/category8EditText"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:textSize="14sp"
						android:textColor="@color/colorOnPrimary"
						android:hint="@string/unnamed"
						android:textColorHint="@color/colorPrimaryHint"
						android:layout_weight="1"
						android:maxLength="20" />
					<com.google.android.material.button.MaterialButton
						android:id="@+id/category8ButtonEdit"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						app:backgroundTint="#009688"
						android:gravity="center_horizontal|center_vertical"
						android:text="Material Button"
						android:textSize="14sp"
						android:textColor="#000000"
						app:cornerRadius="15dp"
						android:textAllCaps="false" />
				</LinearLayout>
			</LinearLayout>
		</ScrollView>
	</LinearLayout>
	<com.google.android.material.floatingactionbutton.FloatingActionButton
		android:id="@+id/_fab"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="16dp"
		android:layout_gravity="right|bottom"
		app:srcCompat="@drawable/check_72dp_black"
		android:transitionName="logo" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>
